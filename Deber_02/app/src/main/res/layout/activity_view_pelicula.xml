<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPelicula">

    <ListView
        android:id="@+id/listView_pelicula"
        android:layout_width="250dp"
        android:layout_height="466dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_atraspelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Atras"
        app:layout_constraintEnd_toEndOf="@+id/listView_pelicula"
        app:layout_constraintStart_toStartOf="@+id/listView_pelicula"
        app:layout_constraintTop_toBottomOf="@+id/listView_pelicula" />
</androidx.constraintlayout.widget.ConstraintLayout>