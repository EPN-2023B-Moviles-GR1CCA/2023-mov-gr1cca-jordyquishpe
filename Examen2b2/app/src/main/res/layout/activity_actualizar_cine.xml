<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarCine">

    <EditText
        android:id="@+id/tv_updCodifoEs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Id_cine"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <EditText
        android:id="@+id/tv_updNombreCine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_updCodifoEs"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updCodifoEs"
        app:layout_constraintTop_toBottomOf="@+id/tv_updCodifoEs" />

    <EditText
        android:id="@+id/tv_updUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Ubicacion"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_updNombreCine"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updNombreCine"
        app:layout_constraintTop_toBottomOf="@+id/tv_updNombreCine" />

    <EditText
        android:id="@+id/tv_updcapacidadSalas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Salas"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_updUbicacion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updUbicacion"
        app:layout_constraintTop_toBottomOf="@+id/tv_updUbicacion" />

    <EditText
        android:id="@+id/tv_updclasificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Clasificacion"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_updcapacidadSalas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updcapacidadSalas"
        app:layout_constraintTop_toBottomOf="@+id/tv_updcapacidadSalas" />

    <Button
        android:id="@+id/btn_updCine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Actualizar "
        app:layout_constraintEnd_toEndOf="@+id/tv_updclasificacion"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/tv_updclasificacion"
        app:layout_constraintTop_toBottomOf="@+id/tv_updclasificacion" />

</androidx.constraintlayout.widget.ConstraintLayout>