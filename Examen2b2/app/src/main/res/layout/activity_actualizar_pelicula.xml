<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarPelicula">

    <Button
        android:id="@+id/btn_actualizarPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />

    <EditText
        android:id="@+id/tv_updEs3d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="es3d"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_actualizarPelicula"
        app:layout_constraintEnd_toEndOf="@+id/btn_actualizarPelicula"
        app:layout_constraintStart_toStartOf="@+id/btn_actualizarPelicula" />

    <EditText
        android:id="@+id/tv_updDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Duracion"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tv_updEs3d"
        app:layout_constraintEnd_toEndOf="@+id/tv_updEs3d"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updEs3d" />

    <EditText
        android:id="@+id/tv_updFechaEstreno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Fecha Estreno"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tv_updDuracion"
        app:layout_constraintEnd_toEndOf="@+id/tv_updDuracion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updDuracion" />

    <EditText
        android:id="@+id/tv_updNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tv_updFechaEstreno"
        app:layout_constraintEnd_toEndOf="@+id/tv_updFechaEstreno"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updFechaEstreno" />

    <EditText
        android:id="@+id/tv_updCodifoPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Id_pelicula"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tv_updNombre"
        app:layout_constraintEnd_toEndOf="@+id/tv_updNombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_updNombre" />
</androidx.constraintlayout.widget.ConstraintLayout>